{
  "name": "fullstack-app",
  "version": "1.0.0",
  "scripts": {
    "install-all": "npx npm-run-all install-frontend install-backend build",
    "install-frontend": "cd frontend && npm install",
    "install-backend": "cd backend && npm install",
    "build": "cd frontend && npm run build",
    "start": "npm run start-servers",
    "start-servers": "npx concurrently \"npm run start-backend\" \"npm run start-frontend\"",
    "start-frontend": "cd frontend && npm start",
    "start-backend": "cd backend && npm start"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  }
}
